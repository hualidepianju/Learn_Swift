#include <SoftwareSerial.h>

SoftwareSerial mySerial(13,12);                 //å®šä¹‰è½¯ä¸²å£tx,rx

int var;                                        //å®šä¹‰æ¥å—æ•°æ®ç±»å‹ä¸ºint

void setup() {
  Serial.begin(9600);                           //å®šä¹‰ç¡¬ä¸²å£æ³¢ç‰¹ç‡ä¸º9600 8 N 1
  mySerial.begin(9600);                         //å®šä¹‰è½¯ä¸²å£æ³¢ç‰¹ç‡ä¸º9600 8 N 1
}

void loop() {

  if(Serial.available() > 0){                   //åˆ¤æ–­ç¡¬ä¸²å£æ˜¯å¦æ”¶åˆ°æ•°æ®
    delay(100);
    var = Serial.parseInt();                    //æ”¶åˆ°æ•°æ®èµ‹å€¼ç»™var
  }
  switch(var){                                  //æ ¹æ®varçš„å€¼è¿›è¡Œç›¸åº”æŒ‡ä»¤æ¡ä»¶å‘é€
    case 1:
      unsigned char a[90]={
          0XFD,0XFD,0X30,0X03,0X79,0XE3,0X00,0X34,0X64,0X00,
          0XC0,0X00,0X43,0X00,0X1B,0X00,0X15,0X00,0X1B,0X00,
